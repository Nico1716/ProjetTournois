{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Player{% endblock %}

{% block body %}

<header class="grid-header">
</header>
<nav class="grid-nav">
    <h2>Ajouter un nouveau joueur</h2>
    <div class="rounded-bar">
        <div class="box bg-primary">1 • Informations du candidat</div>
        <div class="box text-muted">2 • Choisir l'équipe</div>
        <div class="box text-muted">3 • Tournois</div>
        <div class="box text-muted">4 • Info Lieu ?</div>
    </div>

</nav>
<main class="grid-content">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <input type="text" class="form-control mb-3" placeholder="First name">
                <input type="text" class="form-control mb-3" placeholder="Last name">
                <input type="date" class="form-control mb-3" placeholder="Birth date">
                <input type="number" class="form-control mb-3" placeholder="Height (cm)">
            </div>
            <div class="col-md-6">
                <input type="number" class="form-control mb-3" placeholder="Weight (kg)">
                <input type="text" class="form-control mb-3" placeholder="Nationality">
                <select id="first-select" class="form-control">
                    <option value="none">Select a sport</option>
                    <option value="foot">Football</option>
                    <option value="basket">Basketball</option>
                    <option value="rugby">Rugby</option>
                </select>
                <select id="select-position">
                    <option value="none">Position</option>
                </select>
                <input type="number" class="form-control mb-3" placeholder="Player number">
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Submit</button>
    </div>
</main>


{% endblock %}
