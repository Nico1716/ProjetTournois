{% block title %}Tournament{% endblock %}

{% block body %}
<div class="grid-content">
    <h1>Gestion du Tournois</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tournament.id }}</td>
            </tr>
            <tr>
                <th>Name_tournament</th>
                <td>{{ tournament.nameTournament }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tournament.description }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ tournament.startDate ? tournament.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ tournament.endDate ? tournament.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ tournament.gender }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ tournament.status }}</td>
            </tr>
        </tbody>
    </table>
</div>

