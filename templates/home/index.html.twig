{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Home{% endblock %}

{% block body %}


    <header class="grid-header">
        <!-- Container wrapper -->
        
        <img src="{{ asset('images/scoreboxes.svg') }}" alt="scoreboxes">
        
        <!-- Right elements -->
        <div class="nav-item right-item">
            <div class="d-flex align-items-center">
            <!-- Avatar -->
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-muted dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa-regular fa-user text-capitalize px-2"></i>Jean Bombeurre
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" href="#">Paramètres</a></li>
                        <li><a class="dropdown-item" href="#">Profil</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Se déconnecter</a></li>
                    </ul>
                </div><hr>
            </div>
        </div>
        <!-- Container wrapper -->
    </header>

    <nav class="grid-select">
                <button class="selector-button active" id="highlights-btn">Temps forts</button>
                
              
                <button class="selector-button" id="upcoming-btn">À venir</button>
                
    </nav>




    <nav class="grid-nav">
    
        
            <div class="row">
                <div class="col-md-4">
                    <!-- Search bar with input group -->
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Trouver un tournois" aria-label="Search">
                        <button class="btn btn-outline-secondary" type="button" id="button-addon2">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                    
                </div>
                <div class="col-md-6">

                    <button class="sportbox active" id="football-btn">
                        <i class="fa-solid fa-futbol px-2"></i>Football
                    </button>
                

                    <button class="sportbox" id="basket-btn">
                        <i class="fa-solid fa-basketball px-2"></i>Basketball
                    </button>
                
                

                    <button class="sportbox" id="rugby-btn">
                        <i class="fa-solid fa-football px-2"></i>Rugby
                    </button>
                </div>
            </div>
            <div class="row justify-content-between">
                <div class="col-md-4">
                    <button class="box bg-danger sticky-bottom">Regarder en direct</button>
                </div>
                <div class="col-md-4">
                    <button class="box bg-primary">+ Créer un tournoi</button>
                </div>
            </div>
            

    </nav>    
    <main class="grid-main">
        <div id="highlights-content" style="display: none;">
            <img src="{{ asset('images/tournament.svg') }}" alt="tourney">
        </div>
        <div id="upcoming-content" style="display: none;">
            <h1>Upcoming</h1>
            <p>Details about upcoming events...</p>
        </div>
        
    </main>
    <article class="grid-article">
        <div style="display: flex; justify-content: space-around">
            
            <img src="{{ asset('images/podium.svg') }}" alt="podium">
        
        
            <button class="box bg-danger">Suivre les scores</button>
        
        </div>
        <div style="object-fit: cover; flex-grow: 1; display: block; height: 100%;">
            <img src="{{ asset('images/other.svg') }}" alt="Other">
        </div>
        
    </article>
    
    <footer class="grid-footer">Footer</footer>
{% endblock %}